{
  "llm": {
    "provider": "siliconflow",
    "api_key": "sk-fzhifogjweigckusscwacalvdxkwgftxxhgxohqujqgnpjvi",
    "timeout": 60,
    "request": {
      "url": "https://api.siliconflow.cn/v1/chat/completions",
      "payload": {
        "model": "deepseek-ai/DeepSeek-V3",
        "stream": false,
        "max_tokens": 1000,
        "stop": ["null"],
        "temperature": 0.7,
        "top_p": 0.7,
        "top_k": 50,
        "frequency_penalty": 0.5,
        "n": 1,
        "response_format": {"type": "text"}
      },
      "headers": {
        "Content-Type": "application/json"
      }
    }
  },
  "embedding": {
    "provider": "siliconflow",
    "api_key": "sk-fzhifogjweigckusscwacalvdxkwgftxxhgxohqujqgnpjvi",
    "timeout": 30,
    "request": {
      "url": "https://api.siliconflow.cn/v1/embeddings",
      "payload": {
        "model": "BAAI/bge-m3",
        "input": "${input}",
        "encoding_format": "float"
      },
      "headers": {
        "Content-Type": "application/json"
      }
    }
  },
  "vector_db": {
    "host": "192.168.70.174",
    "port": "19530",
    "db_name": "abs2paper",
    "alias": "paper",
    "embedding_dim": 1024
  },
  "grobid": {
    "grobid_server": "http://localhost:8070",
    "batch_size": 1000,
    "sleep_time": 5,
    "timeout": 60,
    "coordinates": ["persName", "figure", "ref", "biblStruct"]
  },
  "data_paths": {
    "raw_papers": {
      "path": "/data/raw/paper_kb",
      "description": "原始论文PDF文件存放目录",
      "used_by": ["text.py"]
    },
    "text_extract": {
      "path": "/abs2paper/extraction/result/text_extract",
      "description": "PDF解析后的XML文件存放目录",
      "used_by": ["text.py (输出)", "abstract.py (输入)", "component.py (输入)"]
    },
    "abstract_extract": {
      "path": "/abs2paper/extraction/result/abstract_extract",
      "description": "提取的论文摘要存放目录",
      "used_by": ["abstract.py (输出)", "labeling.py (输入)"]
    },
    "component_extract": {
      "path": "/abs2paper/extraction/result/component_extract",
      "description": "提取的论文组件存放目录",
      "used_by": ["component.py (输出)", "paper_ingestor.py (输入)"]
    },
    "label": {
      "path": "/abs2paper/extraction/result/label",
      "description": "论文标签数据存放目录",
      "used_by": ["labeling.py (输出)", "paper_ingestor.py (输入)"]
    },
    "paper_topics": {
      "path": "/abs2paper/processing/data/output/paper_topics",
      "description": "主题提取结果存放目录",
      "used_by": ["topic_extractor.py (输出)"]
    },
    "get_topic": {
      "path": "/data/prompt/get_topic",
      "description": "主题提取提示词模板文件",
      "used_by": ["labeling.py"]
    },
    "generate_topic": {
      "path": "/data/prompt/generate_topic",
      "description": "主题提取初始化提示词模板",
      "used_by": ["extract_topics.py"]
    },
    "merge_topic": {
      "path": "/data/prompt/merge_topic",
      "description": "主题合并提示词模板文件",
      "used_by": ["topic_manager.py"]
    },
    "update_topic": {
      "path": "/data/prompt/update_topic",
      "description": "根据合并建议更新主题词的提示词模板",
      "used_by": ["topic_manager.py"]
    },
    "merge_opinion": {
      "path": "/abs2paper/processing/data/merge_opinion.json",
      "description": "存储合并建议结果",
      "used_by": ["topic_manager.py"]
    },
    "topic_json": {
      "path": "/abs2paper/processing/data/topic.json",
      "description": "主题词配置文件",
      "used_by": ["topic_manager.py"]
    },
    "gen_topic_json": {
      "path": "/abs2paper/processing/data/gen_topic.json",
      "description": "生成的主题词存储文件",
      "used_by": ["topic_extractor.py", "topic_manager.py"]
    },
    "gen_prompt": {
      "path": "/abs2paper/processing/data/output/gen_prompt",
      "description": "整合了已有主题词的prompt模板文件",
      "used_by": ["topic_generator.py"]
    },
    "get_prompt": {
      "path": "/abs2paper/processing/data/output/get_prompt",
      "description": "整合了稳定主题词的get_topic提示词文件",
      "used_by": ["labeling.py"]
    }
  },
  "paper": {
    "sections": ["引言", "相关工作", "方法", "实验评价", "总结"],
    "section_mapping_en": {
      "引言": "introduction",
      "相关工作": "related_work",
      "方法": "methodology",
      "实验评价": "experiments",
      "总结": "conclusion"
    },
    "chapter_mapping": {
      "introduction": "引言",
      "related work": "相关工作",
      "method": "方法",
      "methodology": "方法",
      "approach": "方法",
      "design": "方法",
      "implementation": "方法",
      "evaluation": "实验评价",
      "experiments": "实验评价",
      "experimental": "实验评价",
      "results": "实验评价",
      "conclusion": "总结",
      "conclusions": "总结",
      "future work": "总结",
      "summary": "总结"
    },
    "collection_fields": {
      "id": {
        "type": "INT64",
        "is_primary": true,
        "auto_id": true
      },
      "paper_id": {
        "type": "VARCHAR",
        "max_length": 128
      },
      "section": {
        "type": "VARCHAR",
        "max_length": 32
      },
      "text": {
        "type": "VARCHAR",
        "max_length": 8192
      },
      "topics": {
        "type": "ARRAY",
        "max_capacity": 10,
        "element_type": "VARCHAR",
        "element_max_length": 128
      },
      "embedding": {
        "type": "FLOAT_VECTOR",
        "dim": "${embedding_dim}"
      }
    },
    "index_params": {
      "index_type": "IVF_FLAT",
      "params": {
        "nlist": 128
      },
      "metric_type": "L2"
    }
  }
} 